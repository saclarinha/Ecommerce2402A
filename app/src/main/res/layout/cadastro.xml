<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imagetelacadastro"
        android:layout_width="283dp"
        android:layout_height="218dp"
        android:layout_marginTop="54dp"
        android:scaleType="centerCrop"
        android:src="@drawable/imagetelacadastro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imagebuttonvoltarcadastro"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/imagebuttonvoltarcadastro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputNomeCadastro"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginTop="329dp"
        android:background="#233259"
        android:textColorHint="@color/white"
        android:hint="Nome Completo"
        android:padding="10dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputEmailCadastro"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginTop="422dp"
        android:background="#233259"
        android:textColorHint="@color/white"
        android:hint="gmail.com"
        android:padding="10dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputTelefoneCadastro"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginTop="515dp"
        android:background="#233259"
        android:textColorHint="@color/white"
        android:hint="11 91234-5678"
        android:padding="10dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inputSenhaCadastro"
        android:layout_width="289dp"
        android:layout_height="41dp"
        android:layout_marginTop="608dp"
        android:background="#233259"
        android:textColorHint="@color/white"
        android:hint="Misture letra e numeros"
        android:padding="10dp"
        android:paddingStart="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCadastro"
        android:layout_width="209dp"
        android:layout_height="51dp"
        android:layout_marginTop="678dp"
        android:backgroundTint="#32b7f9"
        android:text="Cadastrar"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textnome"
        android:layout_width="87dp"
        android:layout_height="29dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="292dp"
        android:text="Nome:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/texttelefone"
        android:layout_width="92dp"
        android:layout_height="33dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="472dp"
        android:text="Telefone:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textsenha"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="564dp"
        android:text="Senha:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textemail"
        android:layout_width="65dp"
        android:layout_height="29dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="376dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>